<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="info.palamarchuk.api.cooking.entity.RecipeImage" table="recipe_image" schema="palinfo_cooking">
        <composite-id mapped="true" class="info.palamarchuk.api.cooking.entity.RecipeImagePK">
            <key-property name="recipeId">
                <column name="recipe_id" sql-type="int(10) unsigned"/>
            </key-property>
            <key-property name="imageId">
                <column name="image_id" sql-type="int(10) unsigned"/>
            </key-property>
        </composite-id>
    </class>
</hibernate-mapping>