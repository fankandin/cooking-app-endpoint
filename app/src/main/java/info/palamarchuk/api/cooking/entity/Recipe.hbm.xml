<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="info.palamarchuk.api.cooking.entity.Recipe" table="recipe" schema="palinfo_cooking">
        <id name="id">
            <column name="id" sql-type="int(10) unsigned"/>
        </id>
        <property name="title">
            <column name="title" sql-type="varchar(160)" length="160"/>
        </property>
        <property name="type">
            <column name="type"
                    sql-type="set('main', 'side', 'salad', 'soup', 'appetiser', 'sauce', 'dessert', 'beverage', 'bakery', 'conservation')"
                    not-null="true"/>
        </property>
        <property name="cookTime">
            <column name="cook_time" sql-type="time" not-null="true"/>
        </property>
        <property name="precookTime">
            <column name="precook_time" sql-type="time" not-null="true"/>
        </property>
        <property name="annotation">
            <column name="annotation" sql-type="text" not-null="true"/>
        </property>
        <property name="howto">
            <column name="howto" sql-type="text" not-null="true"/>
        </property>
        <property name="language">
            <column name="language" sql-type="enum('russian', 'english', 'german')"/>
        </property>
    </class>
</hibernate-mapping>