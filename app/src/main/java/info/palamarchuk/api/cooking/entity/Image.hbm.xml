<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="info.palamarchuk.api.cooking.entity.Image" table="image" schema="palinfo_cooking">
        <id name="id">
            <column name="id" sql-type="int(10) unsigned"/>
        </id>
        <property name="filename">
            <column name="filename" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="updated">
            <column name="updated" sql-type="datetime" not-null="true"/>
        </property>
        <property name="title">
            <column name="title" sql-type="varchar(255)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>