<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="info.palamarchuk.api.cooking.entity.RecipeIngredient" table="recipe_ingredient"
           schema="palinfo_cooking">
        <composite-id mapped="true" class="info.palamarchuk.api.cooking.entity.RecipeIngredientPK">
            <key-property name="recipeId">
                <column name="recipe_id" sql-type="int(10) unsigned"/>
            </key-property>
            <key-property name="ingredientId">
                <column name="ingredient_id" sql-type="int(10) unsigned"/>
            </key-property>
        </composite-id>
        <property name="amount">
            <column name="amount" sql-type="decimal(6,2)" precision="6" scale="2"/>
        </property>
        <property name="measurement">
            <column name="measurement" sql-type="enum('gram', 'ml', 'tsp', 'tbsp', 'handful', 'pinch', 'lug')"
                    not-null="true"/>
        </property>
        <property name="measurementNote">
            <column name="measurement_note" sql-type="varchar(80)" length="80" not-null="true"/>
        </property>
        <property name="condition">
            <column name="condition" sql-type="varchar(255)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>